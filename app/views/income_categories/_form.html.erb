<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="exampleModalLabel">New Income Category</h4>
    </div>
    <%= form_for @income_category, remote: true do |f| %>
        <div class="modal-body">

          <div id="income_category_errors"></div>

          <div class="form-group">
            <%= f.label :name %><br/>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
            <%= f.hidden_field :company_id, value: current_user.company.id %>
            <%= f.hidden_field :created_by, value: current_user.id %>
            <%= f.hidden_field :updated_by, value: current_user.id %>
          </div>


        </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit', class: 'btn btn-success' %>
      </div>
    <% end %>

  </div>
</div>

