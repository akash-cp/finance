<tr data-id="<%=income_category.id%>">
  <td><%= income_category.name %></td>
  <td><%= income_category.creater.name %></td>
  <td><%= income_category.updater.name %></td>
  <td>
    <% if policy(:income_category).edit? %>
        <%= link_to 'Edit', edit_income_category_path(id: income_category.id), class: 'btn btn-sm btn-primary', remote: true  %>
    <% end %>
    <% if policy(:income_category).destroy? %>
        <%= link_to 'Delete', income_category_path(id: income_category.id), class: 'btn btn-sm btn-danger', method: :delete, remote: true  %>
    <% end %>
  </td>
</tr>