<div class="col-md-6 col-md-offset-3">
  <h1>New Expense</h1>
  <%= form_for(@expense) do |f| %>
      <% if @expense.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

            <ul>
              <% @expense.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :amount %><br />
        <%= f.text_field :amount, autofocus: true, class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_field :description ,class: "form-control" %>
      </div>

      <div class="field ">
        <%= f.label :category %><br />
        <%= collection_select(:expense, :expense_category_id, ExpenseCategory.where(company_id: current_user.company_id), :id, :name,
                              {prompt: 'Select Category'},{class: "form-control form-group"}) %>
      </div>

      <div class="field">
        <%= f.hidden_field :company_id, value: current_user.company.id %>
      </div>

      <div class="field">
        <%= f.hidden_field :created_by, value: current_user.id %>
      </div>

      <div class="field">
        <%= f.hidden_field :updated_by, value: current_user.id %>
      </div>

      <b>Date: </b><br>
      <input type="text" name="expense[date]" class="date-input" value="<%=Date.today.strftime('%d-%m-%Y')%>"/>&nbsp;
      <br><br>

      <div class="field">
        <%= f.file_field :attachment %>
      </div>
      <br>

      <div class="actions">
        <%= f.submit 'Submit', class: 'btn btn-success' %>
      </div>
  <% end %>



</div>