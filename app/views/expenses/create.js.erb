<% if @expense.errors.any? %>
    $("#expense_errors").addClass('alert alert-danger').html("<%= escape_javascript(render 'error') %>").show();
<% else %>
    $("#expenses tbody").prepend("<%= escape_javascript(render partial: 'expense', locals: { expense: @expense }) %>");
    $("#chart").html("<%=escape_javascript(pie_chart @expense_category_count) %>");
    $("#myModal").modal('hide');
<% end %>