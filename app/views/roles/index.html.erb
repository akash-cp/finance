<h1 class="center">Roles</h1>
<div class="beautiful_line"></div>

<% if policy(:role).new? %>
    <div class="center">
      <%= link_to 'New Role', new_role_path , class: 'center btn btn-lg btn-success'%>
    </div>
    <br>
<% end %>

<table class="table">
  <thead>
  <tr>
    <th class="col-xs-10">
      Roles
    </th>
    <th class="col-xs-2"></th>
  </tr>
  </thead>

  <tbody>
  <% @roles.each do |role| %>
      <tr>

        <td>
          <%= role.title %>
        </td>

        <td>
          <% if policy(:role).edit? and !(role.title == 'Admin') %>
              <%= link_to 'Edit', edit_role_path(id: role.id) , class: 'btn btn-sm btn-primary'  %>
          <% end %>
          <% if policy(:role).destroy? and !(role.title == 'Admin') %>
              <%= link_to 'Delete', role_path(id: role.id), class: 'btn btn-sm btn-danger', method:  :delete %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
